{% extends 'base.html.twig' %}

{% block title %}Créer un employé{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-4 w-fit mx-auto">Créer un employé</h1>
    {% if error is defined %}
        <p class="text-red-500 w-fit mx-auto bg-white p-4 rounded-lg mb-10">{{ error }}</p>
    {% endif %}
    <form action="{{ path('app_create_employee') }}" method="post" class="space-y-4 w-2/3 mx-auto">
        <div class="flex flex-col">
            <label for="first_name" class="mb-1 font-medium">Prénom :</label>
            <input type="text" id="first_name" name="first_name" required class="border border-gray-300 p-2 rounded">
        </div>
        <div class="flex flex-col">
            <label for="last_name" class="mb-1 font-medium">Nom :</label>
            <input type="text" id="last_name" name="last_name" required class="border border-gray-300 p-2 rounded">
        </div>
        <div class="flex flex-col">
            <label for="email" class="mb-1 font-medium">Email :</label>
            <input type="email" id="email" name="email" required class="border border-gray-300 p-2 rounded">
        </div>
        <div class="flex flex-col">
            <label for="password" class="mb-1 font-medium">Mot de passe :</label>
            <input type="password" id="password" name="password" required class="border border-gray-300 p-2 rounded">
        </div>
        <div class="flex flex-col">
            <label for="confirm_password" class="mb-1 font-medium">Confirmer le mot de passe :</label>
            <input type="password" id="confirm_password" name="confirm_password" required class="border border-gray-300 p-2 rounded">
        </div>
        <div>
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Créer</button>
        </div>
    </form>
{% endblock %}